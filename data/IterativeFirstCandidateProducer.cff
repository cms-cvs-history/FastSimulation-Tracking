module iterativeFirstTrackCandidatesWithTriplets = trackCandidateProducer from "FastSimulation/Tracking/data/TrackCandidateProducer.cfi"

replace iterativeFirstTrackCandidatesWithTriplets.SeedProducer = iterativeTrackingSeeds:FirstMixedTriplets
replace iterativeFirstTrackCandidatesWithTriplets.TrackProducer = globalPixelWithMaterialTracks
replace iterativeFirstTrackCandidatesWithTriplets.MinNumberOfCrossedLayers = 5

module iterativeFirstTrackCandidatesWithPairs = trackCandidateProducer from "FastSimulation/Tracking/data/TrackCandidateProducer.cfi"

replace iterativeFirstTrackCandidatesWithPairs.SeedProducer = iterativeTrackingSeeds:FirstMixedPairs
replace iterativeFirstTrackCandidatesWithPairs.TrackProducer = globalPixelWithMaterialTracks
replace iterativeFirstTrackCandidatesWithPairs.MinNumberOfCrossedLayers = 5

sequence iterativeFirstTrackCandidates = { 
    iterativeFirstTrackCandidatesWithTriplets &
    iterativeFirstTrackCandidatesWithPairs
}
