module iterativeSecondTrackCandidatesWithTriplets = trackCandidateProducer from "FastSimulation/Tracking/data/TrackCandidateProducer.cfi"

replace iterativeSecondTrackCandidatesWithTriplets.SeedProducer = iterativeSecondSeeds:SecondPixelTriplets
replace iterativeSecondTrackCandidatesWithTriplets.TrackProducers = { firstfilter }
replace iterativeSecondTrackCandidatesWithTriplets.KeepFittedTracks = false
replace iterativeSecondTrackCandidatesWithTriplets.MinNumberOfCrossedLayers = 3

module iterativeSecondTrackCandidatesWithPlTriplets = trackCandidateProducer from "FastSimulation/Tracking/data/TrackCandidateProducer.cfi"

replace iterativeSecondTrackCandidatesWithPlTriplets.SeedProducer = iterativeSecondSeeds:SecondPixelLessTriplets
replace iterativeSecondTrackCandidatesWithPlTriplets.TrackProducers = { firstfilter }
replace iterativeSecondTrackCandidatesWithPlTriplets.KeepFittedTracks = false
replace iterativeSecondTrackCandidatesWithPlTriplets.MinNumberOfCrossedLayers = 3

sequence iterativeSecondTrackCandidates = { 
    iterativeSecondTrackCandidatesWithTriplets &
    iterativeSecondTrackCandidatesWithPlTriplets
}
