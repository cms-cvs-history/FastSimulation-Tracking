module iterativeSecondTracksWithTriplets = 
  ctfWithMaterialTracks from "RecoTracker/TrackProducer/data/CTFFinalFitWithMaterial.cfi"

replace iterativeSecondTracksWithTriplets.src =iterativeSecondTrackCandidatesWithTriplets   
replace iterativeSecondTracksWithTriplets.TTRHBuilder = "WithoutRefit"
replace iterativeSecondTracksWithTriplets.Fitter = "KFFittingSmoother"
replace iterativeSecondTracksWithTriplets.Propagator = "PropagatorWithMaterial"

module iterativeSecondTracksWithPlTriplets = 
  ctfWithMaterialTracks from "RecoTracker/TrackProducer/data/CTFFinalFitWithMaterial.cfi"

replace iterativeSecondTracksWithPlTriplets.src =iterativeSecondTrackCandidatesWithPlTriplets   
replace iterativeSecondTracksWithPlTriplets.TTRHBuilder = "WithoutRefit"
replace iterativeSecondTracksWithPlTriplets.Fitter = "KFFittingSmootherWithOutliersRejectionAndRK"
replace iterativeSecondTracksWithPlTriplets.Propagator = "PropagatorWithMaterial"

sequence iterativeSecondTracks = { 
    iterativeSecondTracksWithTriplets &
    iterativeSecondTracksWithPlTriplets
}
